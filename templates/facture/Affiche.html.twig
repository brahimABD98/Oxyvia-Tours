
{% extends 'backoffice.html.twig' %}
{% block title %} £Facture List {% endblock %}

{% block body %}


  <body class="fixed-nav sticky-footer" id="page-top">
  <!-- Navigation-->
  <!-- /Navigation-->
  <div class="content-wrapper">
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">£Facture Tables</li>
      </ol>
      <!-- Example DataTables Card-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Les £factures relatives à nos Clients </div>
        <br>     </br>
        <div id="confirm">
          {% for message in app.flashes('facture') %}
            <div class="alert-info" role="alert" style="font-size:150%;"  >
              <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg>
              {{message}} <a href="#" class ="mr-5" style="font-size:50%;"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
          {% endfor %}
          {% for message in app.flashes('deleteFacture') %}
            <div class="alert-danger" role="alert" style="font-size:150%;"  >
              <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg>
              {{message}} <a href="#" class ="mr-5" style="font-size:50%;"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
          {% endfor %}
          {% for message in app.flashes('updateFacture') %}
            <div class="alert-info" role="alert" style="font-size:150%;"  >
              <svg class="glyph stroked checkmark"><use xlink:href="#stroked-checkmark"></use></svg>
              {{message}} <a href="#" class ="mr-5" style="font-size:50%;"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
          {% endfor %}
        </div>

        <br></br>



      <center><div class="row">
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card dashboard text-white bg-success o-hidden h-100">




              <br></br>
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fa fa-fw fa-calendar-check-o"></i>
                </div>
                <div class="mr-5"><h5>Show now the paid facture!</h5></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="{{ path('dateinf') }}">
                <span class="float-left">View Details</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
              </a>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card dashboard text-white bg-danger o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fa fa-fw fa-credit-card"></i>
                </div>
                <div class="mr-5"><h5>Show now the unpaid facture!</h5></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="{{ path('datesup') }}">
                <span class="float-left">View Details</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
              </a>
            </div>
          </div>
          <img src="{{ asset('img/logos/uRnmitmHKPelNPLQqKXL.jpg') }}" height="110" width="450"></center>
        </div>

        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

              <thead>
              <tr>
                <th> Numéro de facture </th>
                <th> identifiant/passport </th>
                <th> Montant payé </th>
                <th>date de paiement</th>
                <th> devise selectionné</th>
                <th> moyen de paiement</th>
                <th>mode de paiement</th>
                 {# <th>type de CB</th>#}
                 {# <th>N' de Carte</th> #}
                 {#<th>Code de securité </th>#}
                 {#  <th>date d'expiration</th> #}
                <th> Location choisie</th>
                <th> Pays </th>

                <th>Delete action</th>
                <th>Update action</th>
              </tr>
              </thead>
              <tfoot>

              </tfoot>
              <tbody>
              <tr  {% for f in facture %}  >
                <td> {{ f.getId() }} </td>
                <td>{{ f.getIdentifiant() }}</td>
                <td>{{ f.getMontant() }}</td>
                <td>{{ f.getDatePaiement()|date('d-m-Y H:i:s') }}</td>
                <td>{{ f.getDevise() }}</td>
                <td>{{ f.getMoyenPaiement()}}</td>
                <td>{{ f.getModePaiement() }}</td>
                {#  <td>{{ f.getTypeCB()}}</td> #}
                {#<td>{{ f.getNcb() }}</td> #}
                {# <td>{{ f.getCodeSecurite() }}</td> #}
                 {# <td>{{ f.getDateExpiration()|date('d-m-Y H:i:s') }}</td>#}
                <td>{{ f. getLocation()}}</td>
                <td>{{ f.getPays() }}</td>

                <td> <a href="{{ path('delete',{'id':f.id}) }}"><i class="fa fa-trash"></i></a> </td>

                <td> <a href="{{ path('update',{'id':f.id}) }}"><i class="fa fa-edit"></i></a></td>



              </tr {% endfor %}>
              <form method="post" action="{{ path('searchM') }}">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label><i class="fa fa-search"></i> Search </label>
                      <input class="form-control" type="text" name="search" placeholder="Any infos...">
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label> </label>
                      <input type="submit" value="Search" class="btn-warning">

                    </div>
                  </div>
                </div>
              </form>
              <form method="post" action="{{ path('trie') }}">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label><i class="fa fa-tripadvisor"></i> Trier </label>

                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label> </label>
                      <input type="submit" value="Trie" class="btn-info">

                    </div>
                  </div>
                </div>
              </form>

              <div class="row">
                <div class="col-sm-6">
                    <form method="post" action="{{ path('enabled2') }}"> <input type="submit" value="Refresh" class="btn-success">   </form>
                </div>
                <div class="col-sm-6">
                    <form method="post" action="{{ path('enabled') }}"> <input type="submit" value="Refresh" class="btn-danger">   </form>
                </div>
              </div>



            </table>
            <div class="navigation">
              {{ knp_pagination_render(facture) }}
            </div>




            </tbody>

          </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
      </div>
      <!-- /tables-->
    </div>
    <!-- /container-fluid-->
  </div>
  <!-- /container-wrapper-->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
  </a>
  <!-- Logout Modal-->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
  <!-- Page level plugin JavaScript-->
  <script src="vendor/chart.js/Chart.min.js"></script>
  <script src="vendor/datatables/jquery.dataTables.js"></script>
  <script src="vendor/datatables/dataTables.bootstrap4.js"></script>
  <script src="vendor/jquery.selectbox-0.2.js"></script>
  <script src="vendor/retina-replace.min.js"></script>
  <script src="vendor/jquery.magnific-popup.min.js"></script>
  <!-- Custom scripts for all pages-->
  <script src="js/admin.js"></script>
  <!-- Custom scripts for this page-->
  <script src="js/admin-datatables.js"></script>

  </body>
















{% endblock %}