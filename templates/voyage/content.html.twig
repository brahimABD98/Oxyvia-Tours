

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>nom</th>
            <th>ville</th>
            <th>description</th>
            <th>date debut</th>
            <th>date fin</th>
            <th>prix personne</th>
            <th>nombre de personnes</th>
            <th>Photo</th>

        </tr>
        </thead>

        <tbody>
        {% for i in voyages %}
            <tr>
            <td>{{ i.nom }}</td>
            <td>{{ i.ville }}</td>
            <td>{{ i.description }}</td>
            <td>{{ i.datedebut |date('d-m-Y')}}</td>
            <td>{{ i.datefin|date('d-m-Y ') }}</td>
            <td>{{ i.prixpersonne }}</td>
            <td>{{ i.nbpersonne }}</td>
            <td> <img src="{{ asset('picture/')~ i.image }}" width="200px" height="200px"></td>


        </tr>

        {%  endfor %}
        </tbody>
    </table>
</div>


{% set queryParams = app.request.query.all %}
    {% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajax")|url_encode %}
<nav aria-label="...">
    <ul class="pagination pagination-sm add_bottom_30">


        <li class="{{ (page==1)? 'disabled' : '' }}">
            <a class="page-link" href="{{ (page>1)? '?page=' ~ (page-1):''}}&{{queryString}}">
                Previous
            </a>

        </li>
        {% set pages=(total/limit)|round(0,'ceil') %}
        {% for item in 1..pages %}
            <li class="{{ (page==item)? 'active' :'' }}">

                <a class="page-link" href="?page={{ item }}&{{queryString}}">{{ item }}</a></li>
        {%  endfor %}

        <li class="{{ (page==pages)? 'disabled' : '' }}">
            <a class="page-link" href="{{ (page<pages)? '?page=' ~ (page+1):''}}&{{queryString}}">
                Next
            </a>

        </li>
    </ul>
</nav>
