


{% extends 'backoffice.html.twig' %}

{% block title %}Liste Des Reservations pour CLient {% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Bookings list</li>
            </ol>
            <div class="box_general">
                <div class="header_box">
                    <h2 class="d-inline-block">Liste des Reservation effecut√© par vous </h2>

                </div>
                <div class="list_general">
                    <ul>
                        {% for i in reservations %}
                            <li>
                                <figure><img src="img/item_1.jpg" alt=""></figure>
                                <h4>Hotel {{ i.hotelid}} </h4>
                                <ul class="booking_list">
                                    <li><strong>date debut</strong> {{ i.datedebut|date('d-m-Y') }}</li>
                                    <li><strong>datefin</strong> {{ i.datefin|date('d-m-Y')}} </li>
                                    <li><strong>prix</strong> {{ i.prix }}</li>
                                    <li><strong>nb personne</strong> {{ i.nbpersonne }}</li>
                                </ul>
                                <ul class="buttons">

                                    <li><a href="{{ path('reservation_show1', {'id': i.id}) }}" class="btn_1 gray approve"><i class="fa fa-fw fa-check-circle-o"></i> Consulter</a></li>
                                    <li><a href="{{ path('reservation_edit1', {'id': i.id}) }}"  class="btn_1 gray delete"><i class="fa fa-fw fa-times-circle-o"></i> Modifier</a></li>

                                </ul>
                            </li>
                        {%  endfor %}


                    </ul>
                </div>
            </div>
            <!-- /box_general-->
            <nav aria-label="...">
                <ul class="pagination pagination-sm add_bottom_30">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
            <!-- /pagination-->
        </div>
        <!-- /container-fluid-->
    </div>
{% endblock %}
