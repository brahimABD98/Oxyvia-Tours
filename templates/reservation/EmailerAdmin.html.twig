{% extends 'backoffice.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %} Notifier Admin {% endblock %}


{% block body %}
    <!-- /Navigation-->
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Add listing</li>
            </ol>
            <div class="box_general padding_bottom" height="1500px">
                <div class="header_box version_2" >
                    <h2><i class="fa fa-file"></i>Notifier l'admin du nouvelles chambres vides</h2>
                </div>

                {{ form_start(form) }}

                <div class="form-group">
                    <label>Votre nom</label>


                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}


                </div>
                <div class="form-group">
                    <label>Email du Admin</label>

                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}


                </div>

                <!-- /row-->







            <!-- /box_general-->
            <button type="submit" class="btn_1 medium" >Envoyer</button>
            {{ form_end(form) }}

        </div>
        <!-- /.container-fluid-->
    </div>
{% endblock %}
