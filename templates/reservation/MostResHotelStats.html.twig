


{% extends 'backoffice.html.twig' %}
{% block title %}Hotel STATS  {% endblock %}



{% block body %}

    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Statistiques sur les réservation de l'agence</li>
            </ol>
            <div class="box_general">
                <div class="header_box">
                    <h2 class="d-inline-block">Statistiques sur les réservation de l'agence </h2>

                </div>
                <div class="list_general">
                    <canvas id="categories" width="400" height="100"></canvas>
                </div>
                <div class="list_general">
                    <canvas id="canvas2" width="400" height="100"></canvas>
                </div>

            </div>
            <!-- /box_general-->

            <!-- /pagination-->
        </div>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw==" crossorigin="anonymous"></script>
    <script>
        let categories = document.querySelector("#categories")
        let categGraph = new Chart(categories, {
            type: "pie",
            data: {
                labels: {{ hotelNom|raw }},
                datasets: [{
                    label: "Répartition des reservations",
                    data: {{ resCount|raw }},
                    backgroundColor: ['red','green','blue']
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Stats sur les hotels les plus réservés '
                }
            }
        })


        new Chart(document.getElementById("canvas2"), {
            type: 'line',
            data: {

                labels:{{ nbMois|raw }},
                datasets: [{
                    data: {{ prixtotal|raw }},
                    label: "",
                    borderColor: "#3e95cd",
                    fill: false
                }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Total des profits par mois'
                }
            }
        });


    </script>

{% endblock %}
